<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#003399"
   >


    <Button
        android:id="@+id/backButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
         android:layout_marginTop="10dp"
        android:background="@drawable/button_background"
        android:drawableLeft="@drawable/back"
        android:drawablePadding="8dp"
        android:padding="16dp"
        android:text=""
      />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="124dp"
        android:layout_toEndOf="@+id/backButton"
        android:layout_marginStart="80dp"
        android:fontFamily="@font/featherbold"
        android:text="Settings"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/backButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/emergencyCallLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="66dp"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/featherbold"
        android:text="Emergency Call"
        android:textColor="#FFFFFF"
        android:textSize="18sp"

        />

    <Switch
        android:id="@+id/emergencyCallSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="160dp"
        android:layout_toEndOf="@+id/emergencyCallLabel"
        android:thumbTint="#FFFFFF"
        android:trackTint="#000000" />

    <Button
        android:id="@+id/button"
        android:layout_width="182dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="504dp"
        android:layout_marginEnd="124dp"
        android:layout_marginBottom="350dp"
        android:backgroundTint="#FFFFFF"
        android:onClick="records"
        android:text="records"
        android:textColor="#003398"
        android:textSize="24sp" />

</RelativeLayout>
